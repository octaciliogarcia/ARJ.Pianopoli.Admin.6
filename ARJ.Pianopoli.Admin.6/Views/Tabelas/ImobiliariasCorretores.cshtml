@model ARJ.Pianopoli.Admin._6.Models.ListaCorretoresFiltroVM

<div class="row">
    <div class="col-sm-12"><h2>@Model.Nome</h2> </div>
</div>
<input type="hidden" id="imobiliariaId" value="@Model.ImobiliariaId" />
<hr />
<div class="row">
    <div class="col-sm-6">
        <div class="btn btn-primary" onclick="VoltarImob()">Voltar</div>
        <div class="btn btn-success" onclick="EditarCorretor(0)">Novo Corretor</div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered table-hover table-sm" id="tabelaCorretores">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>CRECI</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Corretores)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Cpf</td>
                        <td>@item.Creci</td>
                        <td>
                            <div class="btn btn-success" onclick="EditarCorretor(@item.Id)">Editar</div>
                            <div class="btn btn-danger" onclick="ExcluirCorretor(@item.Id)">Excluir</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>