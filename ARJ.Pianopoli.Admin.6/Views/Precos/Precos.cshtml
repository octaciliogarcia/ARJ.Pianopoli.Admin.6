@model ARJ.Pianopoli.Admin._6.Models.PrecoVM

@using (Html.BeginForm(null, null, FormMethod.Post, new { Id = "formPreco" }))
{
    <div class="row">
        @Html.HiddenFor(e=>e.Id)
        @Html.HiddenFor(e=>e.CategoriaId)
        @Html.HiddenFor(e=>e.Cor)
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(c => c.Inicio)
            @Html.TextBoxFor(c => c.Inicio, new { @class = "form-control data"})
            @Html.ValidationMessageFor(model => model.Inicio)
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(c => c.Categoria)
            @Html.TextBoxFor(c => c.Categoria, new { @class = "form-control", @maxlength = "11", @size = "15", @readonly="true" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(c => c.Preco)
            @Html.TextBoxFor(c => c.Preco, new { @class = "form-control number", @maxlength = "20", @size = "20" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8" style="margin: 20px 0px 20px 0px">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <div class="btn btn-success" id="showtoast" onclick="SalvarPreco()">Salvar Dados</div>
        </div>
    </div>

    <div style="position: absolute; top: 0px; right: 10px;">

        <div class="toast toast1 toast-bootstrap" role="alert" aria-live="assertive" aria-atomic="true" id="toast1">
            <div class="toast-header">
                <i class="fa fa-stop-circle-o"> </i>
                <strong class="mr-auto m-l-sm">Aviso</strong>
                @*<small>Atenção</small>*@
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body" id="mensagem">
                mensagem
            </div>
        </div>

    </div>

}

<script src="~/js/site.js" asp-append-version="true"></script>

<script type="text/javascript">
    $(function () {

        let toast1 = $('.toast1');
        toast1.toast({
            delay: 5000,
            animation: true
        });

    })
</script>